{
  "private": true,
  "name": "wackystonks",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "client": "yarn workspace ws-client serve",
    "client:dev": "yarn workspace ws-client start",
    "client:build": "yarn workspace ws-client build",
    "server": "yarn workspace ws-server start",
    "server:dev": "yarn workspace ws-server dev",
    "server:build": "yarn workspace ws-server build",
    "build-assets": "yarn workspace ws-assets build",
    "build-all": "yarn build-assets && yarn client:build && yarn server:build",
    "prestart": "yarn build-all",
    "start": "concurrently --kill-others-on-fail  \"yarn client\" \"yarn server\"",
    "dev": "concurrently --kill-others-on-fail \"yarn client:dev\"  \"yarn server:dev\""
  },
  "dependencies": {
    "@changesets/cli": "^2.17.0",
    "concurrently": "^6.2.0"
  }
}
